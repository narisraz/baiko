# Baiko - fiteny fanaovana programa amin'ny teny malagasy

# Fanambarana sy fampisehoana
isa: Mety(Isa) = tsisy;
anarana: Soratra = "Rakoto";
voky: Marina = marina;
asehoy isa;
asehoy anarana;
asehoy voky;

# Fampitahana (if/else)
raha isa != tsisy ary isa > 10 ary tsy diso dia
  asehoy "lehibe";
ankoatra dia
  asehoy "kely";
farany

# Fitodiavana (while loop)
kaonty: Isa = 1;
avereno raha kaonty <= 5 dia
  asehoy kaonty;
  kaonty = kaonty + 1;
farany

# Asa (function)
asa ampio(a: Isa, b: Isa): Isa dia
  mamoaka a + b;
farany

asa tohaina(s: Soratra): Soratra dia
  mamoaka s + " - vita!";
farany

# Fampiasana ny asa
vokatra: Isa = ampio(10, 32);
asehoy vokatra;
asehoy tohaina("Salama");
