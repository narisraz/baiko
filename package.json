{
  "name": "baiko",
  "version": "0.1.0",
  "description": "Baiko language compiler",
  "main": "dist/index.js",
  "bin": {
    "baiko": "bin/baiko.js"
  },
  "files": [
    "dist/",
    "bin/"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "run:baiko": "ts-node src/index.ts --run",
    "interpret": "ts-node src/index.ts --interpret",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.13",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "license": "ISC",
  "dependencies": {
    "mathjs": "^15.1.1",
    "node-fetch": "^2.7.0"
  }
}
